{
    "manifest_version": 2,
    "name": "Watershed Music Player",
    "version": "0.1",
    "browser_action": {
        "default_popup": "html/index.html",
        "default_title": "Save to Watershed",
        "default_icon": "media/favicon-music.png"
    },
    "background": {
        "persistent": true,
        "page": "html/background.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "content_scripts": [
        {
            "matches": ["*://watershed.nthall.com/"],
            "js": ["/js/browser-polyfill.min.js", "/js/player.js"]
        }
    ]
}
