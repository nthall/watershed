{
    "manifest_version": 2,
    "name": "Watershed Music Player",
    "version": "0.3.1",
    "icons": {
        "16": "media/watershed-icon-16.png",
        "19": "media/watershed-icon-transparent-19.png",
        "38": "media/watershed-icon-transparent-38.png",
        "48": "media/watershed-icon-48.png",
        "128": "media/watershed-icon-128.png"
    },
    "browser_action": {
        "default_title": "Save to Watershed",
        "default_icon": {
            "16": "media/watershed-icon-16.png",
            "48": "media/watershed-icon-48.png",
            "128": "media/watershed-icon-128.png"
        }
    },
    "background": {
        "persistent": false,
        "scripts": ["js/background.js"]
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/",
        "https://*/",
        "contextMenus"
    ],
    "content_scripts": [
        {
            "matches": ["https://watershed.nthall.com/"],
            "js": ["js/player.js"]
        },
        {
            "matches": ["<all_urls>"],
            "exclude_matches": ["https://watershed.nthall.com/"],
            "js": ["js/content.js"],
            "css": ["css/main.css"]
        }
    ]
}
